{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "webpack-env",
      "@types/node",
      "@vue/runtime-core",
      "@vue/test-utils"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "custom/*": ["src/components/CustomUI/*"],
      "modals/": ["src/components/Modals/*"]
    }

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vite.config.*",
    "components.d.ts",
    "auto-imports.d.ts",
    "node_modules/unplugin-auto-import/auto-imports.d.ts",
  ],
  "exclude": ["node_modules", "dist"]
}
